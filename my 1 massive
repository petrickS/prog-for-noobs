#include <iostream>
using namespace std;
// массивы

void main()
{
    setlocale(LC_ALL, "ru");

    const int size = 10;

    int arr[size];
    
   

    for (int i = 0; i < 10, i < size; i++)
    {    
        cout << "введите номер архива: " << endl;
        cin >> i;
       
        
        
        while (i<=size)
        {
            cout << "вы обратилист к архиву: " << i << endl;
            break;
        }
        
    }
    


        
}
